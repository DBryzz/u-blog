{% extends 'base.html.twig' %}

{% block title %}uTrains Blog
{% endblock %}

{% block stylesheet %}{% endblock %}


{% block body %}


	{% if blogPosts %}
		{% for blogPost in blogPosts %}
			<table class="example-wrapper">
				<thead style="display: none"></thead>
				<tbody class="code">
					<tr>
						<td colspan="3">
							<h1>{{ blogPost.title }}</h1>
						</td>
					</tr>

					<tr>
						<td colspan="3">
							<a href="{{ path('show_post', {id: blogPost.id}) }}">
								<p>
									{{ blogPost.body|slice(0, 60) ~ '...' }}
								</p>
							</a>
						</td>
					</tr>
					<tr>

						<td>On the:
							{{ blogPost.createdAt|date('Y:m:d H:i:s') }}</td>
						<td>Last Update:
							{{ blogPost.updatedAt|date('Y:m:d H:i:s')  }}</td>
						<td>by:
							{{ blogPost.author.name }}</td>

						{% if user.role == 'AUTHOR' %}
							<td>
								<a href="{{ path('edit_post', {id: blogPost.id}) }}">
									<i class="fas fa-pencil-alt text-secondary"></i>
								</a>
							</td>
							<td>
								<a href="">
									<i class="fas fa-trash-alt red"></i>
								</a>
							</td>
						{% endif %}

					</tr>

				</tbody>


			</table>
		{% endfor %}
	{% else %}
		<p>No articles to display</p>
	{% endif %}
{% endblock %}
{% block javascripts %}
	<script src="/js/main.js"></script>
{% endblock %}
